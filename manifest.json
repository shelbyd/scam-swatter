{
  "name": "Scam Swatter",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Warns when common scammer tactics are performed on webpages.",
  "homepage_url": "https://www.scamswatter.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/inject.js"
      ]
    }
  ]
}

{
  "name": "Scam Swatter",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Warns when common scammer tactics are performed on webpages.",
  "homepage_url": "https://www.scamswatter.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/utils.js",
      "src/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
    "default_popup": "src/browser_action_popup.html"
  },
  "permissions": [
    "<all_urls>",
    "management",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/inject.js"
      ]
    }
  ]
}
